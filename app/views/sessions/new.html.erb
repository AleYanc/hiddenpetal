<h1 align="center" class="m-5">Log in</h1>
<%if logged_in?%>
<div class="already-logged" style="width:400px;display:flex;flex-direction:column;align-items:center;justify-content:space-evenly;margin:0 auto;">
  <h2 style="text-align:center;">Ya ha iniciado sesion</h2>
  <%= link_to 'Log out', logout_path, method: :delete, class: 'btn btn-danger' %>
</div>
<%else%>
  <div class="form-login-container">
    <%= form_for(:session, :html => {class: 'form-login', role: 'form'}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="control-label">
          <%= f.label :email %>
        </div>
        <div>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label">
          <%= f.label :password%><br/>
        </div>
        <div>
          <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'Enter password'%>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit 'Log in', class: 'btn-login'%>
      </div>
    <%end%>
  </div>
<%end%>
