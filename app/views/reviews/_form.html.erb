<div class="review-form-container">
  <h2>Crear reseña</h2>
  <%= form_with(model: review) do |form| %>

    <div class="field">
      <%= form.label 'Nombre de usuario' %>
      <%= form.text_field :user_name %>
    </div>
    
    <div class="field">
      <%= form.label 'Contenido' %>
      <%= form.text_area :content %>
    </div>
    
    <!--
    <div class="field">
      <%= form.label 'Imagenes' %>
      <%= form.text_area :images, value: @review.formatted_images %>
      <span class="helper">Separar los links de las imagenes con comas. En la página de reseñas se mostrarán en el mismo orden en el que se pongan acá.</span>
    </div>
    -->

    <div class="field">
      <%= form.label 'Imagen' %>
      <%= form.text_field :image %>
    </div>

    <div class="actions">
      <%= form.submit 'Crear reseña', class: 'btn-primary' %>
    </div>
  <% end %>
</div>
