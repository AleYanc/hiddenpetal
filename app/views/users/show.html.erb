<%if @user.admin?%>
  <div class="admin-user-wrapper">
    <h2>Bienvenido, <%=@user.name%></h2>

    <div class="actions">
      <p>Acciones disponibles</p>

      <div class="list">
        <ul>
          <li>Usuarios: 
            <%=link_to 'Administrar', users_path, class:'btn-primary btn-sm'%>
            <%=link_to 'Editar', edit_user_path(@user), class: 'btn-alert btn-sm' %>
            <%=link_to 'Cerrar sesión', logout_path, method: :delete, class:'btn-danger btn-sm'%>
          </li>
          <li>Productos: 
            <%=link_to 'Administrar productos', products_path, class:'btn-alert btn-sm'%>
            <%=link_to 'Crear nuevo producto', new_product_path, class:'btn-primary btn-sm'%>

          </li>
          <li>Frases: 
            <%=link_to 'Crear nueva frase', new_frase_path, class:'btn-primary btn-sm'%>
          </li>
          <li>Noticias: 
            <%=link_to 'Crear nueva noticia', new_notice_path, class:'btn-primary btn-sm'%>
          </li>
          <li>Patrones: 
            <%=link_to 'Administrar patrones', patterns_path, class:'btn-alert btn-sm'%>
            <%=link_to 'Crear un nuevo patrón', new_pattern_path, class:'btn-primary btn-sm'%>
          </li>
          <li>Marquees:
            <%=link_to 'Marquee actual', marquees_path, class:'btn-primary btn-sm'%> 
            <%=link_to 'Crear nuevo marquee', new_marquee_path, class:'btn-primary btn-sm'%>
          </li>
          <li>Reseñas: 
            <%=link_to 'Crear nueva reseña', new_review_path, class:'btn-primary btn-sm'%>
          </li>

          <li>Home Banners: 
            <%=link_to 'Nuevo set', new_home_banner_path, class:'btn-primary btn-sm'%>
            <%=link_to 'Set actual', home_banners_path, class: 'btn-alert btn-sm'%>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <%= link_to 'Volver', url_for(:back), class: 'btn-danger', style:'margin-top:50px;display:inline-block' %>
<%else%>
  <div class="common-user-wrapper">
    <h2>Bienvenido, <%=@user.name%></h2>

    <div class="actions">
      <p>Acciones disponibles</p>
      <%=link_to 'Cerrar sesión', logout_path, method: :delete, class:'btn-primary'%>
      <%= link_to 'Editar usuario', edit_user_path(@user), class: 'btn-primary' %>
    </div>
    <%= link_to 'Volver', url_for(:back), class: 'btn-danger' %>
  </div>
<%end%>
