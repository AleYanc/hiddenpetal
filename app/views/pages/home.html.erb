<div class="home-container">
  <div class="home-banner">
    <div class="bigscreen">
      <div data-controller="carousel" class="swiper-container" style="width:100vw; height:30vh" data-carousel-options-value='
        {
          "pagination": {"el": ".swiper-pagination", "dynamicBullets": "true"},
          "navigation": {"nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev"},
          "autoplay": {"delay": "5000", "disableOnInteraction": "false"}
        }'>
          <div class="swiper-wrapper">
            <!-- Slides -->
            <%if !@home_banner_big.nil?%>
              <%@home_banner_big.images.each do |img|%>
                <div class="swiper-slide">
                  <img src="<%=img%>" alt="image" style="width:100vw;height:30vh;object-fit:cover;">
                </div>
              <%end%>
            <%end%>
          </div>
          <div class="swiper-pagination"></div>
      </div>
    </div>

    <div class="celular">
        <div data-controller="carousel" class="swiper-container celular" style="width:100vw; height:30vh" data-carousel-options-value='
          {
            "pagination": {"el": ".swiper-pagination", "dynamicBullets": "true"},
            "navigation": {"nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev"},
            "autoplay": {"delay": "5000", "disableOnInteraction": "false"}
          }'>
            <div class="swiper-wrapper">
              <!-- Slides -->
              <%if @home_banner_phone != []%>
                <%@home_banner_phone.images.each do |img|%>
                  <div class="swiper-slide">
                    <img src="<%=img%>" alt="image" style="width:100vw;height:30vh;object-fit:cover;">
                  </div>
                <%end%>
              <%end%>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
  </div>

  <h2 class="home-products-title">Â¡Nuevos productos en stock!</h2>
  <div class="home-products">
    <div class="home-products-big-screen">
      <%=render 'home-slideshow', products: @store_preview%>
    </div>
    <div class="home-products-responsive">
      <%=render 'home-slideshow-responsive', products: @store_preview%>
    </div>
  </div>

  <div class="categories-bg">
    <div class="home-categories">
      <%@home_categories.each do |category|%>
        <div class="category">
          <%=link_to store_path(:category => category.name), style: "text-decoration:none;color:black;", class:'category-link' do%>
            <div class="category-bg" style="background-image:url(<%=category.image%>)"></div>
            <h1><%=category.name%></h1>
          <%end%>
        </div>
      <%end%>

      <div class="category last-cat">
        <%=link_to store_path, style: "text-decoration:none;color:black;" do%>
          <h1>Ver todo</h1>
        <%end%>
      </div>
    </div>
  </div>
  <%=render 'layouts/footer'%>
</div>