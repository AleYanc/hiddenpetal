<div data-controller="carousel" class="swiper-container" style="width:80vw; height:30vh" data-carousel-options-value='
      {
        "pagination": {"el": ".swiper-pagination", "dynamicBullets": "true"},
        "autoplay": {"delay": "5000", "disableOnInteraction": "false"},
        "slidesPerView": "auto",
        "autoplay": {"delay": "4500", "disableOnInteraction": "true"}
      }'>
  <div class="swiper-wrapper" style="width:90%;height:100%;">
      <%products.each do |product|%>
        <div class="swiper-slide" style="width:380px">
          <div class="product">
            <img src="<%=product.img%>" alt="" style="width:100%;height:100%;object-fit:cover;">
            <div class="product-details">
              <p class="name"><%=product.name%></p>
              <p class="price">$ <%=product.price%></p>
              <%=link_to 'Ver producto', producto_path(product), class: 'btn-primary'%>
            </div>
          </div>
        </div>
      <%end%>
  </div>
  <div class="swiper-pagination"></div>
</div>