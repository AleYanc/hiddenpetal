<div class="form-container">
  <h1 class="products-form-heading"><%=@product.new_record? ? 'Crear nuevo producto' : 'Editar producto'%></h1>
  <%= form_for(@product, :html => {class: 'product-form', role: 'form'}) do |form| %>
    <div class="field">
      <%= form.label 'Nombre'%>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label 'Precio' %>
      <%= form.text_field :price %>
    </div>

    <div class="field">
      <%=form.label 'Imagen'%>
      <%=form.text_field :img%>
    </div>

    <div class="field">
      <%= form.label 'Link producto' %>
      <%= form.text_field :link %>
    </div>

    <div class="field">
      <%= form.label 'Categoria' %>
      <%= form.select(:category_id, categories_for_select, :prompt => 'Seleccionar categoría') %>
    </div>

    <div class="field">
      <%= form.label 'Descripción' %>
      <%= form.text_area :description, class: 'product-textarea' %>
    </div>

    <div class="field">
      <%= form.label 'Stock' %>
      <%= form.number_field :stock, min: 1 %>
    </div>

    <div class="actions">
      <%= form.submit(@product.new_record? ? 'Crear' : 'Actualizar')%>
    </div>
  <% end %>

  <% if product.errors.any? %>
  <div class="error-explanation">
    <h2><%= pluralize(product.errors.count, "error") %> fue / fueron encontrados: </h2>

    <div class="errors">
      <% product.errors.each do |error| %>
        <p><%= error.full_message %></p>
      <% end %>
    </div>
  </div>
<% end %>
</div>

